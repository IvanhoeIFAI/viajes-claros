<div id="funcionario">
	<div class="centered-content">
        <script type="text/javascript">
            window.funcionario = <%- JSON.stringify(funcionario) %>;
            window.viaje = <%- JSON.stringify(viaje) %>;
        </script>
		<div class="container-fluid" ng-controller="viajeCTL">
			<div class="row ranks">
				<div class="col-md-6 funcionario-info">
					<div class="inner-content">
						<i class="icon-senior funcionario-icon"></i> 
						<h1>{{funcionario.nombre_completo}}</h1>
						<p><strong>Cargo: {{funcionario.cargo_nombre ? funcionario.cargo_nombre : "no disponible"}}</strong></p>
						<p><strong>Dependencia: {{funcionario.unidad_administrativa ? funcionario.unidad_administrativa : "no disponible"}}</strong></p>
						<p class="money"><strong>{{viaje.gasto_total | currency}}</strong></p>
						<p><strong><small>Gastos al a√±o en viajes</small></strong></p>
						<div class="share-links">
							<div class="row">
								<div class="col-sm-4 fb-share-button" data-href="<%- fullUrl %>">Compartir</div>
								<div class="col-sm-4"><a class="twitter-share-button" href="<%- fullUrl %>" data-via="twitterdev">Tweet</a></div>
								<div class="col-sm-4"><a href="#" class="share-link sb">Suscribirme</a></div>
							</div>
						</div>
                        <p ng-repeat="(attribute,value) in viaje">{{attribute}} ({{value}})</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

