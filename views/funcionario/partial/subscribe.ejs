<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <script>
            window.funcionario = <%- JSON.stringify(funcionario) %>;
        </script>
        <div class="modal-content" ng-controller='subscribeCTL'>
            <form accept-charset='utf-8' enctype='multipart/form-data' class='stdform stdform2' ng-submit="submitForm()" name="myForm">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Subscribirse</h4>
                </div>
                <div class="modal-body">
                    <div class="widgetbox">
                        <div class="widgetcontent nopadding">
                            <p>
                                <label for="email">Email</label>
                                <span class="field"><input type="email" id="email" name="email" class="form-control" ng-model='email' required></span>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <input type="submit" class="btn btn-primary" value='Guardar' ng-disabled="myForm.$invalid">
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->