<div id="header">
	<div class="container container-fixed">
		<div class="menu">
			<a href="/" class="logo"><img src="/images/viajeslogo.png" alt="logo"></a>
			<form action="/funcionario/search" method="POST" class="search-form" ng-controller="searhcFormCTL">
				<a href="#" ng-click="toggleComp()" title="Comparar" id="comparar-header"><strong><i class="icon icon-comparar"></i> <span>COMPARAR</span></strong></a>
				<input 
					autocomplete="off"
					type="text"
					name="filtro"
					id="filtro"
					placeholder="Buscar servidor público"
					onfocus="this.placeholder=''"
					onblur="this.placeholder='Buscar servidor público'"
					ng-model="func"
					typeahead="funcionario as labelAC(funcionario) for funcionario in funcionariosAJAX($viewValue) | filter:$viewValue | limitTo: 6"
					typeahead-min-length='1'
					typeahead-on-select='onSelectPart($item, $model, $label)'
				
				/>

			</form>
			<div class="clear"></div>
		</div>
	</div>
	<div class="container container-fake">
		<div class="menu">
			<a href="/" class="logo"><img src="/images/viajeslogo.png" alt="logo"></a>
			<form action="/funcionario/search" method="POST" class="search-form" ng-controller="searhcFormCTL">
				<input 
					autocomplete="off"
					type="text"
					name="filtro"
					id="filtro"
					placeholder="Buscar servidor público"
					onfocus="this.placeholder=''"
					onblur="this.placeholder='Buscar servidor público'"
					ng-model="selectedCountries"
					typeahead="funcionario as funcionario.nombre_completo for funcionario in funcionariosSearch | filter:$viewValue | limitTo:6 "
					typeahead-min-length='1'
					typeahead-on-select='onSelectPart($item, $model, $label)'
				
				/>
			</form>
			<div class="clear"></div>
		</div>
	</div>
</div>