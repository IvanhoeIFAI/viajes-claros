<div ng-controller="globalCTL">
<md-sidenav  class="md-sidenav-left md-whiteframe-z2" id="sidebar-comparador" md-component-id="left">
  <md-toolbar class="md-theme-light">
  	<p class="icon-container animated rotateIn" id="compare-icon"><i class="icon icon-comparar"></i></p>
    <h3 class="md-toolbar-tools">COMPARA SERVIDORES PÃšBLICOS</h3>
  </md-toolbar>
  <md-content class="md-padding">
	<md-input-group tabindex="-1" label="FUNCIONARIO"  class="ng-isolate-scope md-default-theme ng-valid md-input-has-value" aria-invalid="false">
	<label for="001" class="ng-binding">FUNCIONARIO</label>
	<input 
		id="001"
		autofocus="" 
		ng-model="fun"
		type="text" tabindex="false"
		aria-invalid="false"
		aria-disabled="false"
		class="ng-valid ng-dirty ng-valid-parse ng-touched"
		typeahead="funcionario for funcionario in funcionariosAJAX($viewValue) | filter:$viewValue | limitTo: 6"
		typeahead-min-length='1'
		typeahead-on-select='onSelectComparador($item, $model, $label)'
        typeahead-template-url="typeahead-template.html"
		typeahead-focus-first="false"				
	/>
   </md-input-group>
   	  <ul class="to-compare">
   	  	<li ng-repeat="fun in funcionariosComparador">
   	  		<p><i class="icon icon-comicion"></i> {{fun.nombre_completo}} <a href="#" ng-click="removeFromComp(fun)" class="del"><strong>x</strong></a></p>
   	  	</li>
   	  </ul>
	  <md-button class="md-raised md-primary">COMPARAR</md-button>
  </md-content>
</md-sidenav>
</div>
